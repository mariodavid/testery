<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="de.diedavids.testery.web.teststep.teststep.TeststepEdit"
        datasource="teststepDs"
        focusComponent="fieldGroup"
        messagesPack="de.diedavids.testery.web.teststep.teststep">
    <dsContext>
        <datasource id="teststepDs"
                    class="de.diedavids.testery.entity.teststep.Teststep"
                    view="teststep-view"/>
        <collectionDatasource id="testcasesDs"
                              class="de.diedavids.testery.entity.testcase.Testcase"
                              view="_minimal">
            <query>
                <![CDATA[select e from testery$Testcase e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="actionsDs"
                              class="de.diedavids.testery.entity.testaction.Testaction"
                              view="_minimal">
            <query>
                <![CDATA[select e from testery$Testaction e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="teststepDs">
            <column width="250px">
                <field optionsDatasource="testcasesDs"
                       property="testcase"/>
                <field property="position"/>
                <field optionsDatasource="actionsDs"
                       property="action"/>
                <field property="executed"/>
                <field property="executedAt"/>
                <field property="successful"/>
                <field property="result"/>
                <field property="comment"
                       rows="5"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
