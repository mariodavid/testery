<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="de.diedavids.testery.web.teststep.jsonteststepresult.JsonTeststepResultEdit"
        datasource="teststepResultDs"
        focusComponent="fieldGroup"
        messagesPack="de.diedavids.testery.web.teststep.jsonteststepresult">
    <dsContext>
        <datasource id="teststepResultDs"
                    class="de.diedavids.testery.entity.teststep.JsonTeststepResult"
                    view="result-view"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="contentTabSheet"
            spacing="true">
        <tabSheet id="contentTabSheet">
            <tab id="general"
                 caption="msg://general"
                 expand="expectedActualHBox"
                 margin="true,false,false,false"
                 spacing="true">
                <fieldGroup id="fieldGroup"
                            datasource="teststepResultDs">
                    <column width="250px">
                        <field editable="false"
                               property="summary"/>
                    </column>
                </fieldGroup>
                    <hbox id="expectedActualHBox"
                           width="100%">
                        <sourceCodeEditor id="expectedValueSourceCodeEditor"
                                          caption="msg://expected"
                                          datasource="teststepResultDs"
                                          editable="false"
                                          height="100%"
                                          mode="JavaScript"
                                          property="expectedValue"
                                          width="100%"/>
                        <sourceCodeEditor id="actualValueSourceCodeEditor"
                                          caption="msg://actual"
                                          datasource="teststepResultDs"
                                          editable="false"
                                          height="100%"
                                          mode="JavaScript"
                                          property="actualValue"
                                          width="100%"/>
                    </hbox>
            </tab>
            <tab id="error"
                 caption="msg://error"
                 margin="true,false,false,false"
                 spacing="true">
                <vbox id="errorContent"
                      height="100%"
                      spacing="true">
                    <textArea id="errorTextArea"
                              caption="msg://error"
                              datasource="teststepResultDs"
                              editable="false"
                              height="100%"
                              property="error"
                              width="100%"/>
                    <textArea id="stacktraceTextArea"
                              caption="msg://stacktrace"
                              datasource="teststepResultDs"
                              editable="false"
                              height="100%"
                              property="stacktrace"
                              width="100%"/>
                </vbox>
            </tab>
        </tabSheet>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
